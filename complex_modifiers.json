    {
      "description": "Complex modifier: LR-shift hotkey",
      "manipulators": [
        {
          "conditions": [
            {
              "name": "lr_shift",
              "type": "variable_if",
              "value": 0
            }
          ],
          "from": {
            "key_code": "right_shift",
            "modifiers": { "mandatory": ["left_shift"] }
          },
          "parameters": { "basic.to_if_held_down_threshold_milliseconds": 150 },
