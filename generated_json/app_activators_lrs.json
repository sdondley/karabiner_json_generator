{
   "title" : "App Activators - Left-Right Shift Sequence Triggers",
   "rules" : [
      {
         "manipulators" : [
            {
               "to" : [
                  {
                     "shell_command" : "/Users/steve/bin/master.sh 'Finder'"
                  }
               ],
               "to_after_key_up" : [
                  {
                     "set_variable" : {
                        "value" : 0,
                        "name" : "lr_shift"
                     }
                  }
               ],
               "type" : "basic",
               "from" : {
                  "key_code" : "f"
               },
               "conditions" : [
                  {
                     "value" : 1,
                     "type" : "variable_if",
                     "name" : "lr_shift"
                  }
               ]
            }
         ],
         "description" : "Left-Right shift quick press + f to Finder"
      },
      {
         "description" : "Left-Right shift quick press + i to iTerm",
         "manipulators" : [
            {
               "conditions" : [
                  {
                     "type" : "variable_if",
                     "value" : 1,
                     "name" : "lr_shift"
                  }
               ],
               "from" : {
                  "key_code" : "i"
               },
               "type" : "basic",
               "to_after_key_up" : [
                  {
                     "set_variable" : {
                        "name" : "lr_shift",
                        "value" : 0
                     }
                  }
               ],
               "to" : [
                  {
                     "shell_command" : "/Users/steve/bin/master.sh 'iTerm'"
                  }
               ]
            }
         ]
      },
      {
         "description" : "Left-Right shift long press + s to System Settings",
         "manipulators" : [
            {
               "to_after_key_up" : [
                  {
                     "set_variable" : {
                        "value" : 0,
                        "name" : "lr_shift"
                     }
                  }
               ],
               "type" : "basic",
               "conditions" : [
                  {
                     "name" : "lr_shift",
                     "type" : "variable_if",
                     "value" : 2
                  }
               ],
               "from" : {
                  "key_code" : "s"
               },
               "to" : [
                  {
                     "set_notification_message" : {
                        "text" : "",
                        "id" : "org.pqrs.long_lr_shift"
                     }
                  },
                  {
                     "shell_command" : "/Users/steve/bin/master.sh 'System Settings'"
                  }
               ]
            }
         ]
      },
      {
         "description" : "Left-Right shift long press + a to Activity Monitor",
         "manipulators" : [
            {
               "from" : {
                  "key_code" : "a"
               },
               "conditions" : [
                  {
                     "name" : "lr_shift",
                     "type" : "variable_if",
                     "value" : 2
                  }
               ],
               "to_after_key_up" : [
                  {
                     "set_variable" : {
                        "value" : 0,
                        "name" : "lr_shift"
                     }
                  }
               ],
               "type" : "basic",
               "to" : [
                  {
                     "set_notification_message" : {
                        "id" : "org.pqrs.long_lr_shift",
                        "text" : ""
                     }
                  },
                  {
                     "shell_command" : "/Users/steve/bin/master.sh 'Activity Monitor'"
                  }
               ]
            }
         ]
      }
   ]
}
