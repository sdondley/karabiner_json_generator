{
  "title": "App Activators - Double Tap Right Shift Triggers",
  "rules": [
    {
      "description": "Double tap left shift-a to Activity Monitor",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "double_tap_rshift",
              "value": 2
            }
          ],
          "from": {
            "key_code": "a"
          },
          "to": [
            {
              "shell_command": "/Users/steve/bin/master.sh 'Activity Monitor'"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "double_tap_rshift",
                "value": 0
              }
            }
          ]
        }
      ]
    },
