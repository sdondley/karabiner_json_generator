{
   "title" : "App Activators - Double Tap Right Shift Triggers",
   "rules" : [
      {
         "description" : "Double tap left shift-s to Safari",
         "manipulators" : [
            {
               "conditions" : [
                  {
                     "value" : 2,
                     "name" : "double_tap_rshift",
                     "type" : "variable_if"
                  }
               ],
               "from" : {
                  "key_code" : "s"
               },
               "to_after_key_up" : [
                  {
                     "set_variable" : {
                        "name" : "double_tap_rshift",
                        "value" : 0
                     }
                  }
               ],
               "to" : [
                  {
                     "shell_command" : "/Users/steve/bin/master.sh 'Safari'"
                  }
               ],
               "type" : "basic"
            }
         ]
      }
   ]
}
