      {
         "manipulators":[
            {
               "to_if_held_down":[
                  {
                     "set_variable":{
                        "value":2,
                        "name":"lr_shift"
                     }
                  },
                  {
                     "set_notification_message":{
                        "text":"LR shift pressed",
                        "id":"org.pqrs.long_lr_shift"
                     }
                  }
               ],
               "from":{
                  "modifiers":{
                     "mandatory":[
                        "left_shift"
                     ]
                  },
                  "key_code":"right_shift"
               },
               "type":"basic",
               "conditions":[
                  {
                     "type":"variable_if",
                     "value":0,
                     "name":"lr_shift"
                  }
               ],
               "to":[
                  {
                     "set_variable":{
                        "name":"lr_shift",
                        "value":1
                     }
                  }
               ],
               "parameters":{
                  "basic.to_if_held_down_threshold_milliseconds":150
               }
            },
            {
               "conditions":[
                  {
                     "name":"lr_shift",
                     "value":1,
                     "type":"variable_if"
                  }
               ],
               "type":"basic",
               "to":[
                  {
